{
  "compilerOptions": {
    "baseUrl": "src",
    "declaration": true,
    "jsx": "react",
    "lib": ["es5", "es2015", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./lib",
    "rootDirs": ["src"],
    "target": "es5",
    "paths": {
      "@src": ["./*"],
      "@hooks": ["./hooks"],
      "@hooks/": ["./hooks/*"]
    },
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test"]
}